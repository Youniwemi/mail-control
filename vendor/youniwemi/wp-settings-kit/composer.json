{
    "name": "youniwemi/wp-settings-kit",
    "description": "WP Settings Kit is a lightweight library for easily creating WordPress settings pages and Post metaboxes.",
    "type": "library",
    "license": "GPL-2.0",
    "minimum-stability": "stable",
    "autoload": {
	    "files": ["class-wp-settings-kit.php"]
	},
    "archive": {
        "exclude": ["examples/", ".github/"]
    },
    "require": {
        "php": ">=7.3"
    },
    "scripts": {
        "cs": "vendor/bin/phpcs --standard=phpcs.xml class-wp-settings-kit.php",
        "cbf": "vendor/bin/phpcbf --standard=phpcs.xml class-wp-settings-kit.php"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.9",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
